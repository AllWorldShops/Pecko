<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="journal_bond_nonbond_form_view_inherit" model="ir.ui.view">
        <field name="name">account.journal</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
        
             <xpath expr="//field[@name='account_control_ids']" position="after">
                    <field name="is_landing_cost"/>
            </xpath>  
             
        </field>
    </record>
    
     <record id="res_config_settings_view_form_inherit_stock_journal_landed" model="ir.ui.view">
            <field name="name">res.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
             <xpath expr="//div[@id='setup']" position="inside">
                       
                   <div class="col-xs-12 col-md-6 o_setting_box">
                           <div class="o_setting_left_pane"/>
                           <div class="o_setting_right_pane">
                               <label for="landing_cost_id"/>
                               <div class="text-muted">
					Enable Journals For Landed Cost.                                        
				   </div>
                            	<field name="landing_cost_id" options="{'no_create': True,'no_create_edit' : True}"/>
                           </div>
                    </div>
                </xpath>
             </field>
      </record>
</odoo> 
