<odoo>
	<data>
		<record id="view_category_property_form_inherit_inventory"
			model="ir.ui.view">
			<field name="name">product.category.stock.property.form.inherit.inventory
			</field>
			<field name="model">product.category</field>
			<field name="inherit_id"
				ref="stock_account.view_category_property_form" />
			<field name="arch" type="xml">
				<xpath expr="//group/group[1]"
					position="after">
					<group name="inventory_adjustment_property"
						string="Inventory Adjustment Properties">
						<field name="stock_increase_account" />
						<field name="stock_decrease_account" />
					</group>
				</xpath>
			</field>
		</record>
	</data>
</odoo>