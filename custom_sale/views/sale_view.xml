<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="ppts_sale_order_inherit_form" model="ir.ui.view">
        <field name="name">ppts.sale.order.inherit.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
            	<field name="manufacturer_id"/>
            	<field name="requested_date"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="old_so_no" attrs="{'readonly': [('state', 'not in', ['draft','sent'])]}"/>
                <field name="order_ref_old" attrs="{'readonly': [('state', 'not in', ['draft','sent'])]}"/>
            </xpath>

        </field>
    </record>

    <!-- Quotation Tree View -->
    <record id="view_quotation_tree_with_onboarding_inherit_custom_sale" model="ir.ui.view">
        <field name="name">view.quotation.tree.with.onboarding.inherit.custom.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
                <field name="old_so_no"/>
            </xpath>

        </field>
    </record>

    <!-- Order Tree View -->
    <record id="view_order_tree_inherit_custom_sale" model="ir.ui.view">
        <field name="name">view.order.tree.inherit.custom.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
                <field name="old_so_no"/>
            </xpath>

        </field>
    </record>

</odoo>